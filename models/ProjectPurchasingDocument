// models/ProjectPurchasingDocument.js

const mongoose = require("mongoose");

const projectPurchasingDocumentSchema = new mongoose.Schema({
  products: [
    {
      productName: { type: String, required: true },
      costPerUnit: { type: Number, required: true },
      amount: { type: Number, required: true },
      totalCost: { type: Number, required: true }, // Cost per unit x amount
      note: { type: String },
    },
  ],
  grandTotalCost: { type: Number, required: true }, // Sum of all totalCosts
  submissionDate: { type: String, required: true },
  submittedBy: { type: mongoose.Schema.Types.ObjectId, ref: "User" },
});

module.exports = mongoose.model(
  "ProjectPurchasingDocument",
  projectPurchasingDocumentSchema
);
